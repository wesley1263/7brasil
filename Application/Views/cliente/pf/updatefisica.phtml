<script>
	jQuery(function(){
		
		 jQuery("#cep_clientePF").mask("99999-999");
		 jQuery("#rg_clientePF").mask("99.999.999-9");
		 jQuery("#cpf_clientePF").mask("999.999.999-99");
		 jQuery("#telefone_clientePF").mask("(99) 9999-9999");
